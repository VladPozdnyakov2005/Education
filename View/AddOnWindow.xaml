<Window x:Class="Education.View.AddOnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Education.View"
        mc:Ignorable="d"
        Title="Добавление онлайн курса" Height="400" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Добавление онлайн курса" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Lucida Console" Margin="0,10" FontWeight="Bold" FontSize="26" Foreground="blue" Height="30" Grid.ColumnSpan="2"/>
        <Image Source="/assets/CollegeIcon.png" Height="50" Width="50" Grid.Row="0" HorizontalAlignment="Left" Margin="30,0,0,0" Grid.ColumnSpan="1"/>
        <Image Source="/assets/CollegeIcon.png" Height="50" Width="50" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,30,0" Grid.ColumnSpan="2"/>
        <Border Grid.Row="0" Grid.ColumnSpan="3" Width="650" Height="2" VerticalAlignment="Bottom" BorderBrush="#00BFFF" BorderThickness="2"></Border>
        <TextBlock Grid.Row="1" Text="Название курса" Grid.Column="0" Height="30" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="CourseName" Width="250" Height="25" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBox>
        <TextBlock Grid.Row="2" Text="Срок обучения, мес" Grid.Column="0" Height="25" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="CourseSrok" Width="250" Height="25" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBox>
        <TextBlock Grid.Row="3" Text="Количество мест" Grid.Column="0" Height="30" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="CoursePlaces" Width="250" Height="25" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBox>
        <TextBlock Grid.Row="4" Text="Цена, руб" Grid.Column="0" Height="30" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="CoursePrice" Width="250" Height="25" FontFamily="Lucida Console" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="blue" Margin="0,10,0,0"></TextBox>
        <Button x:Name="AddCourse" Grid.Row="5" Grid.Column="0" Width="190" Height="30" Content="Добавить курс" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,15" FontFamily="Segoe UI" FontWeight="Bold" FontSize="15" Click="AddCourse_Click" BorderBrush="#00CED1" Background="LightYellow" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
