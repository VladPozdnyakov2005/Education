<UserControl x:Class="Education.View.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Education.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="190"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Панель администратора" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida console" FontWeight="Bold" FontSize="36" Foreground="blue" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button Name="AddOffButton" Grid.Row="1" Content="Создать новый очный курс" Width="400" Height="40" Margin="0" BorderBrush="#00CED1" Background="LightYellow" FontWeight="Bold" Tag="False" FontSize="20" Click="AddOffButton_Click"/>
        <Button Name="AddOnButton" Grid.Row="2" Content="Создать новый дистанционный курс" Width="400" Height="40" Margin="0" BorderBrush="#00CED1" Background="LightYellow" FontWeight="Bold" Tag="False" FontSize="20" Click="AddOnButton_Click"/>
        <Button Name="ExitButton" Grid.Row="3" Content="Выйти из аккаунта" Width="400" Height="40" Margin="0" BorderBrush="#00CED1" Background="LightYellow" FontWeight="Bold" Tag="False" FontSize="20" Click="ExitButton_Click"/>
    </Grid>
</UserControl>
